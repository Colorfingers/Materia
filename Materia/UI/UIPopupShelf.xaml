<Window x:Class="Materia.UI.UIPopupShelf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Materia.Properties"
        xmlns:local="clr-namespace:Materia.UI"
        mc:Ignorable="d"
        Title="Popup Shelf" Height="512" Background="#111" Width="256" WindowStyle="None" Loaded="Window_Loaded" ResizeMode="NoResize" Deactivated="Window_Deactivated" ShowInTaskbar="False">
    <Grid>
        <TextBox Name="SearchBox" Grid.ColumnSpan="2" Margin="0,0,0,0" Padding="2" Grid.Row="0" Text="{x:Static p:Resources.TITLE_SEARCH}" HorizontalAlignment="Stretch" Background="#222" Foreground="LightGray" VerticalAlignment="Top" Height="24" TextChanged="SearchBox_TextChanged" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" />
        <ListView Name="ResourcesList" Background="Transparent" VirtualizingPanel.IsVirtualizing="True" Margin="0,24,0,0">
            
        </ListView>
    </Grid>
</Window>
