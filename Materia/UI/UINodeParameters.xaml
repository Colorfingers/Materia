<UserControl x:Class="Materia.UINodeParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             xmlns:comps="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="256">
    <Grid Background="#FF2b2b2b">
        <Border Background="#FF333333" Margin="1,26,1,1" />
        <TextBlock Name="Title" VerticalAlignment="Top" Height="20" Foreground="Gray" Text="" Margin="5,5,0,0"></TextBlock>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="2,28,2,2">
            <comps:ParameterList x:Name="Params" />
        </ScrollViewer>
    </Grid>
</UserControl>
