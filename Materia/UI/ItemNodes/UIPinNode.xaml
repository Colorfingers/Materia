<UserControl x:Class="Materia.UI.ItemNodes.UIPinNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.ItemNodes"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64" Loaded="UserControl_Loaded" Focusable="True" 
             MouseMove="UserControl_MouseMove" MouseDown="UserControl_MouseDown" MouseLeave="UserControl_MouseLeave" 
             MouseUp="UserControl_MouseUp"  MouseDoubleClick="UserControl_MouseDoubleClick" Width="64" Height="64">
    <Grid>
        <Border Name="BorderArea" BorderThickness="1" BorderBrush="Transparent"></Border>
        <Image Name="PinSource" Source="/Materia;component/Images/pin.png" />
        <Rectangle>
            <Rectangle.Fill>
                <SolidColorBrush x:Name="PinColorBrush" Color="White" />
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/Materia;component/Images/pin.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
