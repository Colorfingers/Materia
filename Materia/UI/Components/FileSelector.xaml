<UserControl x:Class="Materia.UI.Components.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="256" HorizontalAlignment="Stretch">
    <Grid Height="42">
        <TextBlock Name="PathLabel"  Margin="5,5,144,5" Foreground="LightGray" />
        <Button Name="SelectFile" Click="SelectFile_Click" Background="#444" BorderThickness="0" Foreground="LightGray" Content="Select" Margin="0,5,75,5" Width="64" HorizontalAlignment="Right" Style="{StaticResource ImageTextButton}" />
        <Button x:Name="ClearFile" Click="ClearFile_Click" Background="#444" BorderThickness="0" Foreground="LightGray" Content="Clear" Margin="0,5,6,5" Width="64" HorizontalAlignment="Right" Style="{StaticResource ImageTextButton}"/>
    </Grid>
</UserControl>
