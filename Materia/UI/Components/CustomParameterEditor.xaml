<UserControl x:Class="Materia.UI.Components.CustomParameterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,5,0">
            <Button Name="AddParam" Width="115" Background="Transparent" Margin="5" BorderThickness="0" Click="AddParam_Click" ToolTip="Add Parameter" Style="{DynamicResource ImageTextButton}">
                <StackPanel Height="24" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Foreground="LightGray" Text="Add Parameter" Margin="5" VerticalAlignment="Center" />
                    <Image Source="/Materia;component/Images/add.png" />
                </StackPanel>
            </Button>
        </StackPanel>
        <StackPanel Name="Stack">
            
        </StackPanel>
    </StackPanel>
</UserControl>
