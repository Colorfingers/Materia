<UserControl x:Class="Materia.UI.Components.ToggleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="256" HorizontalAlignment="Stretch">
    <Grid Height="42">
        <ToggleButton x:Name="Toggle" BorderThickness="0" Margin="5"  FontSize="10" HorizontalAlignment="Stretch" Height="32" Click="Toggle_Click" Style="{StaticResource ToggleTextButton}"></ToggleButton>
    </Grid>
</UserControl>
