<UserControl x:Class="Materia.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256" Height="32">
    <Grid>
        <TextBox IsEnabled="{Binding IsEnabled}" Background="{StaticResource Overlay5}" CaretBrush="{StaticResource Primary}" Height="32" Padding="2,4,2,0" Foreground="{StaticResource TextLight}" BorderThickness="0" Name="Input" TextChanged="Input_TextChanged" PreviewTextInput="Input_PreviewTextInput" HorizontalAlignment="Stretch" Margin="2" KeyDown="Input_KeyDown"></TextBox>
    </Grid>
</UserControl>
