<UserControl x:Class="Materia.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256">
    <Grid>
        <TextBox Background="#222" Foreground="LightGray" BorderBrush="#666" BorderThickness="1" Name="Input" TextChanged="Input_TextChanged" PreviewTextInput="Input_PreviewTextInput" Grid.Column="1" HorizontalAlignment="Right" Width="48" Margin="0,5,10,5" KeyDown="Input_KeyDown"></TextBox>
    </Grid>
</UserControl>
