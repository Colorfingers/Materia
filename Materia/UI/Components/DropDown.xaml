<UserControl x:Class="Materia.DropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256" Height="32" HorizontalAlignment="Stretch">
    <Grid>
        <ComboBox MinWidth="128" Margin="2" Foreground="{StaticResource TextLight}" IsEnabled="{Binding IsEnabled}" Height="32" Style="{StaticResource ComboBoxFlatStyle}" SelectionChanged="Dropdown_SelectionChanged" Name="Dropdown" Grid.Column="1"></ComboBox>
    </Grid>
</UserControl>
