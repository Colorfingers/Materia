<UserControl x:Class="Materia.UI.Components.PropertyInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256">
    <Grid Height="32">
        <TextBox Name="IField" Margin="5" Background="#222" Foreground="LightGray" TextChanged="TextInput_TextChanged" KeyDown="IField_KeyDown" />
    </Grid>
</UserControl>
