<UserControl x:Class="Materia.UI.Components.MSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="32" Focusable="True" Loaded="UserControl_Loaded">
    <Canvas Background="{StaticResource Overlay5}" MouseDown="Canvas_MouseDown" Margin="2"  MouseUp="Canvas_MouseUp" ClipToBounds="True" MouseEnter="Canvas_MouseEnter" Height="22" >
        <Rectangle x:Name="FillRect" Canvas.Left="0" Canvas.Top="0" Fill="{StaticResource Primary}" Height="22" Width="1"></Rectangle>
    </Canvas>
</UserControl>
