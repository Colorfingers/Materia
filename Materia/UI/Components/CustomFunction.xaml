<UserControl x:Class="Materia.UI.Components.CustomFunction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Background="#111" Margin="5">
        <Button Name="RemoveFunction" Width="80" Background="Transparent" HorizontalAlignment="Right" Margin="5" BorderThickness="0" Click="RemoveFunction_Click"  ToolTip="Remove Custom Function" Style="{DynamicResource ImageTextButton}">
            <StackPanel Height="24" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Foreground="LightGray" Text="Remove" Margin="5" VerticalAlignment="Center" />
                <Image Source="/Materia;component/Images/minus.png" />
            </StackPanel>
        </Button>
        <StackPanel Orientation="Vertical" Name="Stack">
            
        </StackPanel>
        <Button Name="EditFunc" Click="EditFunc_Click" Background="#444" BorderThickness="0" Foreground="LightGray" Content="Edit" Height="32" Margin="5" HorizontalAlignment="Stretch" />
    </StackPanel>
</UserControl>
