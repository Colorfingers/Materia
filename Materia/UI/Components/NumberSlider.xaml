<UserControl x:Class="Materia.NumberSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256">
    <Grid Height="32">
        <Slider Foreground="#666" Name="SlideInput" MinHeight="8" Template="{StaticResource HorizontalSlider}" ValueChanged="SlideInput_ValueChanged" VerticalAlignment="Center" Margin="5,0,56,0" />
        <local:NumberInput x:Name="TextInput" HorizontalAlignment="Right" />
    </Grid>
</UserControl>
