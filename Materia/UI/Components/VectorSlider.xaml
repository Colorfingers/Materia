<UserControl x:Class="Materia.UI.Components.VectorSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             xmlns:o="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <StackPanel>
            <TextBlock Foreground="LightGray" Text="X" Margin="5" />
            <o:NumberSlider x:Name="XValue" />
        </StackPanel>
        <StackPanel>
            <TextBlock Foreground="LightGray" Text="Y" Margin="5" />
            <o:NumberSlider x:Name="YValue" />
        </StackPanel>
        <StackPanel Name="ZView">
            <TextBlock Foreground="LightGray" Text="Z" Margin="5" />
            <o:NumberSlider x:Name="ZValue" />
        </StackPanel>
        <StackPanel Name="WView">
            <TextBlock Foreground="LightGray" Text="W" Margin="5" />
            <o:NumberSlider x:Name="WValue" />
        </StackPanel>
    </StackPanel>
</UserControl>
