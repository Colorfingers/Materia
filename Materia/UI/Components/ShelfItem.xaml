<UserControl x:Class="Materia.UI.Components.ShelfItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <StackPanel Orientation="Vertical">
        <Grid>
            <TextBlock Name="More" MouseDown="Expander_MouseDown" HorizontalAlignment="Left" FontSize="16" Foreground="LightGray" Margin="5" VerticalAlignment="Center" Cursor="Hand" />
            <TextBlock Name="Title" HorizontalAlignment="Stretch" Margin="24,0,0,0" Foreground="LightGray" Background="Transparent" Padding="2" MouseDown="Title_MouseDown" Cursor="Hand" VerticalAlignment="Center" />
        </Grid>
        <StackPanel Margin="5,0,0,0" Name="Items" Orientation="Vertical" />
    </StackPanel>
</UserControl>
