<UserControl x:Class="Materia.UI.Components.RecentShortcutItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <TextBlock Name="Title" Foreground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" />
        <Button Click="Button_Click" Height="32" Width="64" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#444" Foreground="LightGray" Content="OPEN" Style="{StaticResource ImageTextButton}" />
    </Grid>
</UserControl>
